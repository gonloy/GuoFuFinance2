    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
